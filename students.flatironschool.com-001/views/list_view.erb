    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">

        <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
        <style>

          h1, h2, h3 {
            font-family: 'HelveticaNeue';
          }

          .hero-unit {
            margin: 0 auto;
            width: 75%;
            text-align: center;
          }

          .photo-wrapper {
            margin: 0;
            padding: 0;
            display: inline-block;
            height: 150px;
            width: 150px;
            text-align: center;
            box-sizing: border-box;
            background: #eee;
          }

          .photo-wrapper img {
            margin: 0;
            padding: 0;
            max-width: 100%;
            max-height: 100%;
            box-sizing: border-box;
          }

        </style>

        <link rel="stylesheet" href="/styles/main.css">
    </head>
    <body>
    <div class="container" style="margin-top:50px">
        <div class="hero-unit">
            <h1>Students of Flatiron</h1>

            <% for @student in @students %>
              <a href="/<%= @student.slug %>">
                <div class="photo-wrapper">
                  <% unless @student.image == '[Null]' %>
                    <img src="http://students.flatironschool.com/<%= @student.image %>" alt="<%=@student.name%>">
                  <% end %>
                </div>
              </a>
            <% end %>
        </div>
    </div>

